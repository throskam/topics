<div class="page-header">
	<h1><%= __('user:settings.title') %></h1>
</div>

<div class="col-lg-8 col-lg-offset-2">
	<form method="POST" role="form" class="form-horizontal">
		<div class="form-group">
			<label for="dateFormat" class="col-lg-4 control-label"><%= __('user:settings:date-format.label') %></label>
			<div class="col-lg-8">
				<input type="text" name="dateFormat" value="<%= user.dateFormat %>" placeholder="<%= __('user:settings:date-format.placeholder') %>" class="form-control">
			</div>
		</div>

		<div class="form-group">
			<div class="col-lg-8 col-lg-offset-4">
				<button type="submit" class="btn btn-default"><%= __('user:settings:submit.btn') %></button>
			</div>
		</div>
	</form>
</div>