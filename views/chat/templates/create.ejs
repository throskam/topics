<div class="col-lg-6 col-lg-offset-3">
	<div class="panel panel-default">
		<div class="panel-heading">
			<h3 class="panel-title"><%= __('chat:create.title') %></h3>
		</div>
		<div class="panel-body">
			<form class="form-horizontal">
				<div class="form-group {{ app.errors.title.length > 0 ? 'has-error' : '' }}" >
					<label for="title" class="col-lg-4 control-label"><%= __('chat:title.label') %></label>
					<div class="col-lg-8">
						<input type="text" name="title" placeholder="<%= __('chat:title.ph') %>" class="form-control" ng-model="newChat.title">
						<span class="help-block" ng-repeat="error in app.errors.title">{{ error }}</span>
					</div>
				</div>

				<div class="form-group {{ app.errors.description.length > 0 ? 'has-error' : '' }}" >
					<label for="description" class="col-lg-4 control-label"><%= __('chat:description.label') %></label>
					<div class="col-lg-8">
						<input type="text" name="description" placeholder="<%= __('chat:description.ph') %>" class="form-control" ng-model="newChat.description">
						<span class="help-block" ng-repeat="error in app.errors.description">{{ error }}</span>
					</div>
				</div>

				<div class="form-group {{ app.errors.welcome.length > 0 ? 'has-error' : '' }}" >
					<label for="welcome" class="col-lg-4 control-label"><%= __('chat:welcome.label') %></label>
					<div class="col-lg-8">
						<input type="text" name="welcome" placeholder="<%= __('chat:welcome.ph') %>" class="form-control" ng-model="newChat.welcome">
						<span class="help-block" ng-repeat="error in app.errors.welcome">{{ error }}</span>
					</div>
				</div>

				<div class="form-group">
					<label for="restricted" class="col-lg-4 control-label"></label>
					<div class="col-lg-8">
						<div class="checkbox">
							<label>
								<input type="checkbox" name="restricted" ng-model="newChat.restricted">
								<%= __('chat:restricted.label') %>
							</label>
						</div>
					</div>
				</div>

				<div class="form-group">
					<div class="col-lg-8 col-lg-offset-4">
						<button type="submit" class="btn btn-default" ng-click="app.create(newChat)"><%= __('chat:create.btn') %></button>
						<button type="submit" class="btn btn-default" ng-click="app.to('/')"><%= __('chat:cancel.btn') %></button>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>